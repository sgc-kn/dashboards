{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/"
      }
    }
  },
  "postCreateCommand": "uv sync && npm clean-install && git config --global diff.lfs.textconv cat && uv run pre-commit install"
}